{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "commitmsg": "validate-commit-msg",
    "postinstall": "lerna bootstrap",
    "prepush": "npm run test",
    "test": "lerna run test"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/tychota/taiichi.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": ["tslint --fix", "lerna run prettier-write --", "git add"]
  },
  "devDependencies": {
    "cz-lerna-changelog": "^1.2.1",
    "lerna": "^2.5.1",
    "lerna-semantic-release": "^9.1.0",
    "lint-staged": "^6.0.0"
  },
  "workspaces": ["packages/*"]
}
